<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebView.MainPage">

        <Grid>
            <StackLayout>
                <WebView  x:Name="wbview"  Navigating="WebView_Navigating" Navigated="WebView_Navigated"
        HeightRequest="1000" />
            </StackLayout>
            <StackLayout HorizontalOptions="Center" VerticalOptions="End" HeightRequest="100" x:Name="busyIndi" IsVisible="false">
                <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                    <ActivityIndicator  IsRunning="True" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"  ></ActivityIndicator>
                    <Label HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"  Text="Loading.."></Label>
                </StackLayout>
            </StackLayout>
        </Grid>

</ContentPage>

